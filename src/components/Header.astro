---
import { siteConfig } from "../config/site.config";
---

<header
    id="header"
    class="fixed top-0 left-0 right-0 z-50 transition-all duration-300"
>
    <nav class="container-custom py-4 md:py-6">
        <div class="flex items-center justify-between">
            <!-- Logo -->
            <a
                href="/"
                class="flex items-center gap-3 group relative z-10"
                aria-label="Ir al inicio - Haz La Tarea"
            >
                <img
                    src="/images/logo.png"
                    alt="Haz La Tarea Logo"
                    class="h-10 md:h-12 w-auto transition-transform duration-300 group-hover:scale-105"
                    width="120"
                    height="48"
                />
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden lg:flex items-center gap-8">
                {
                    siteConfig.navigation.map((item) => (
                        <a
                            href={item.href}
                            class="text-text-secondary hover:text-primary transition-colors duration-300 
                   font-medium text-sm uppercase tracking-wide relative
                   after:absolute after:left-0 after:bottom-[-4px] after:w-0 after:h-0.5 
                   after:bg-primary after:transition-all after:duration-300
                   hover:after:w-full"
                        >
                            {item.name}
                        </a>
                    ))
                }
            </div>

            <!-- CTA Button - Desktop -->
            <div class="hidden lg:block">
                <a
                    href={siteConfig.cta.primary.href}
                    class="btn-primary text-sm"
                >
                    {siteConfig.cta.primary.text}
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-btn"
                type="button"
                class="lg:hidden relative z-10 p-2 rounded-lg hover:bg-white/10 transition-colors"
                aria-label="Abrir menú de navegación"
                aria-expanded="false"
                aria-controls="mobile-menu"
            >
                <div
                    class="w-6 h-5 flex flex-col justify-between"
                    id="hamburger-icon"
                >
                    <span
                        class="w-full h-0.5 bg-white rounded-full transition-all duration-300 origin-left"
                        id="line-1"></span>
                    <span
                        class="w-full h-0.5 bg-white rounded-full transition-all duration-300"
                        id="line-2"></span>
                    <span
                        class="w-full h-0.5 bg-white rounded-full transition-all duration-300 origin-left"
                        id="line-3"></span>
                </div>
            </button>
        </div>
    </nav>

    <!-- Mobile Menu Overlay -->
    <div
        id="mobile-menu"
        class="lg:hidden fixed inset-0 bg-background/98 backdrop-blur-xl z-40
           opacity-0 invisible transition-all duration-300 pt-20"
        aria-hidden="true"
    >
        <div class="container-custom h-full flex flex-col">
            <!-- Mobile Navigation Links -->
            <nav class="flex-1 flex flex-col justify-center gap-6">
                {
                    siteConfig.navigation.map((item, index) => (
                        <a
                            href={item.href}
                            class="mobile-nav-link text-3xl md:text-4xl font-impact uppercase text-white 
                   hover:text-primary transition-colors duration-300
                   transform translate-y-4 opacity-0"
                            style={`transition-delay: ${index * 50}ms`}
                            data-nav-link
                        >
                            {item.name}
                        </a>
                    ))
                }
            </nav>

            <!-- Mobile Menu Footer -->
            <div class="py-8 border-t border-white/10">
                <a
                    href={siteConfig.cta.primary.href}
                    class="btn-primary w-full justify-center text-lg"
                >
                    {siteConfig.cta.primary.text}
                </a>

                <!-- Social Links -->
                <div class="flex items-center justify-center gap-6 mt-6">
                    <a
                        href={siteConfig.social.instagram}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-text-secondary hover:text-primary transition-colors"
                        aria-label="Instagram"
                    >
                        <svg
                            class="w-6 h-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                            ></path>
                        </svg>
                    </a>
                    <a
                        href={siteConfig.social.linkedin}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-text-secondary hover:text-primary transition-colors"
                        aria-label="LinkedIn"
                    >
                        <svg
                            class="w-6 h-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
